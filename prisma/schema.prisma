generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reminders {
  id        String   @id @default(cuid())
  title     String
  till      DateTime
  tgUserId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model currentInteraction {
  id          Int    @id @unique @default(autoincrement())
  userid      String @unique
  personality Int    @default(0)
}

model scannedTokens {
  id          Int      @id @unique @default(autoincrement())
  token       String   @unique
  updatedAt   DateTime @updatedAt
  scannedBy   String
  scannedFrom String
  count       Int      @default(1)
  createdAt   DateTime @default(now())
}

model ChatSettings {
  id            Int      @id @default(autoincrement())
  chatId        String   @unique
  rickNews      Boolean  @default(false)
  autoResponder Boolean  @default(true)
  noResultMode  Boolean  @default(false)
  priceMode     String   @default("sim")
  emojiMode     Boolean  @default(true)
  anonymous     Boolean  @default(true)
  fixTwitter    Boolean  @default(true)
  cashTag       Boolean  @default(true)
  stickerGun    Boolean  @default(false)
  betaFeatures  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Member {
  id        Int      @id @default(autoincrement())
  userId    String
  chatId    String
  username  String?
  anonymous Boolean  @default(true)
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, chatId])
}

model User {
  id         Int      @id @default(autoincrement())
  telegramId String   @unique
  credits    Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Chat {
  id        Int      @id @default(autoincrement())
  chatId    String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatSummary {
  id        String   @id @default(cuid())
  chatId    String
  summary   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContractAnalysis {
  id        String   @id @default(cuid())
  address   String
  analysis  String   @db.Text
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  userId    String
  username  String?
  firstName String?
  text      String   @db.Text
  isGroup   Boolean  @default(false)
  createdAt DateTime @default(now())
}
